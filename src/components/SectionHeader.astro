---
export interface Props {
    text: string;
}
const { text } = Astro.props as Props;
---

<div class="flex flex-col mb-6 lg:flex-row md:mb-8">
    <p class="text-lg group relative w-max">
        <span
            class="xs:text-3xl sm:text-4xl text-start font-bold tracking-tight text-white"
            id="title-section">{text}</span
        >
        <span
            class="absolute -bottom-1 right-0 transition-all h-1 bg-indigo-600 max-sm:w-24 w-32"
        ></span>
    </p>
</div>
